<p id="notice"><%= notice %></p>

<h1>New Message</h1>

<%= render 'form' %>

<h1>Listing Messages</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Message</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @messages.each do |message| %>
      <tr>
        <td><%= message.name %></td>
        <td><%= message.email %></td>
        <td><%= message.message %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

